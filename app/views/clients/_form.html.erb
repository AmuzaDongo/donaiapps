<%= form_with(model: client, class: "px-5 pb-6") do |form| %>
  
  <div class="space-y-6">
    <div class="border-b border-gray-900/10 pb-6">
     <div class="mt-2 grid grid-cols-1 gap-x-6 gap-y-3 sm:grid-cols-6  lg:grid-cols-12">
        <div class="col-span-6">
          <label for="name" class="block text-sm font-medium leading-6 text-gray-900">Company Name</label>
          <div class="mt-1">
            <%= form.text_field :name, class: "block w-full rounded-md border-0 py-1.5 text-gray-900 shadow-sm ring-1 ring-inset ring-gray-300 placeholder:text-gray-400 focus:ring-2 focus:ring-inset focus:ring-indigo-600 sm:text-sm sm:leading-6" %>
          </div>
        </div>

        <div class="col-span-6">
          <label for="person" class="block text-sm font-medium leading-6 text-gray-900">Contact Person</label>
          <div class="mt-1">
            <%= form.text_field :person, class: "block w-full rounded-md border-0 py-1.5 text-gray-900 shadow-sm ring-1 ring-inset ring-gray-300 placeholder:text-gray-400 focus:ring-2 focus:ring-inset focus:ring-indigo-600 sm:text-sm sm:leading-6" %>
          </div>
        </div>

        <div class="col-span-6">
          <label for="project" class="block text-sm font-medium leading-6 text-gray-900">Project Name</label>
          <div class="mt-1">
            <%= form.text_field :project, class: "block w-full rounded-md border-0 py-1.5 text-gray-900 shadow-sm ring-1 ring-inset ring-gray-300 placeholder:text-gray-400 focus:ring-2 focus:ring-inset focus:ring-indigo-600 sm:text-sm sm:leading-6" %>
          </div>
        </div>

        <div class="col-span-6">
          <label for="company_size" class="block text-sm font-medium leading-6 text-gray-900">Company Size</label>
          <div class="mt-1">
            <%= form.select :company_size, options_for_select(['1-50', '51-100', '150+']), {}, { autocomplete: 'company_size', class: "block w-full rounded-md border-0 py-1.5 text-gray-900 shadow-sm ring-1 ring-inset ring-gray-300 placeholder:text-gray-400 focus:ring-2 focus:ring-inset focus:ring-blue-800 sm:text-sm sm:leading-6" } %>
          </div>
        </div>

        <div class="col-span-6">
          <label for="industy" class="block text-sm font-medium leading-6 text-gray-900">Industry</label>
          <div class="mt-1">
            <%= form.select :industy, options_for_select(['E-commerce', 'Fintech Industry', 'Education', 'Innovate health care', 'Non-profite', 'Food and Beverage', 'Entertainment', 'Travel and Hospitality', 'Pharmaceuticals and Biotechnology', 'Energy', 'Telecommunications', 'Finance']), {}, { autocomplete: 'industy', class: "block w-full rounded-md border-0 py-1.5 text-gray-900 shadow-sm ring-1 ring-inset ring-gray-300 placeholder:text-gray-400 focus:ring-2 focus:ring-inset focus:ring-blue-800 sm:text-sm sm:leading-6" } %>
          </div>
        </div>

        <div class="col-span-6">
          <label for="status" class="block text-sm font-medium leading-6 text-gray-900">Service</label>
          <div class="mt-1">
            <%= form.collection_select :service_id, Service.order(:title), :id, :title, { prompt: 'Select Service' }, { class: 'block w-full rounded-md border-0 py-1.5 text-gray-900 shadow-sm ring-1 ring-inset ring-gray-300 placeholder:text-gray-400 focus:ring-2 focus:ring-inset focus:ring-indigo-600 sm:text-sm sm:leading-6'} %>
          </div>
        </div>

        <div class="col-span-6">
          <label for="amout" class="block text-sm font-medium leading-6 text-gray-900">Cost of Project</label>
          <div class="mt-1">
            <%= form.text_field :amout, class: "block w-full rounded-md border-0 py-1.5 text-gray-900 shadow-sm ring-1 ring-inset ring-gray-300 placeholder:text-gray-400 focus:ring-2 focus:ring-inset focus:ring-indigo-600 sm:text-sm sm:leading-6" %>
          </div>
        </div>

        <div class="col-span-6">
          <label for="email" class="block text-sm font-medium leading-6 text-gray-900">Email</label>
          <div class="mt-1">
            <%= form.text_field :email, class: "block w-full rounded-md border-0 py-1.5 text-gray-900 shadow-sm ring-1 ring-inset ring-gray-300 placeholder:text-gray-400 focus:ring-2 focus:ring-inset focus:ring-indigo-600 sm:text-sm sm:leading-6" %>
          </div>
        </div>

        <div class="col-span-6">
          <label for="phone" class="block text-sm font-medium leading-6 text-gray-900">Phone Number</label>
          <div class="mt-1">
            <%= form.text_field :phone, class: "block w-full rounded-md border-0 py-1.5 text-gray-900 shadow-sm ring-1 ring-inset ring-gray-300 placeholder:text-gray-400 focus:ring-2 focus:ring-inset focus:ring-indigo-600 sm:text-sm sm:leading-6" %>
          </div>
        </div>

        <div class="col-span-6">
          <label for="country" class="block text-sm font-medium leading-6 text-gray-900">Country</label>
          <div class="mt-1">
            <%= form.text_field :country, class: "block w-full rounded-md border-0 py-1.5 text-gray-900 shadow-sm ring-1 ring-inset ring-gray-300 placeholder:text-gray-400 focus:ring-2 focus:ring-inset focus:ring-indigo-600 sm:text-sm sm:leading-6" %>
          </div>
        </div>

        <div class="col-span-6">
          <label for="city" class="block text-sm font-medium leading-6 text-gray-900">City</label>
          <div class="mt-1">
            <%= form.text_field :city, class: "block w-full rounded-md border-0 py-1.5 text-gray-900 shadow-sm ring-1 ring-inset ring-gray-300 placeholder:text-gray-400 focus:ring-2 focus:ring-inset focus:ring-indigo-600 sm:text-sm sm:leading-6" %>
          </div>
        </div>

        <div class="col-span-6">
          <label for="address" class="block text-sm font-medium leading-6 text-gray-900">Address</label>
          <div class="mt-1">
            <%= form.text_field :address, class: "block w-full rounded-md border-0 py-1.5 text-gray-900 shadow-sm ring-1 ring-inset ring-gray-300 placeholder:text-gray-400 focus:ring-2 focus:ring-inset focus:ring-indigo-600 sm:text-sm sm:leading-6" %>
          </div>
        </div>

        <div class="col-span-full">
          <label for="testmony" class="block text-sm font-medium leading-6 text-gray-900">Project Description</label>
          <div class="mt-1">
            <%= form.rich_text_area :description, rows:"3", class:"block w-full rounded-md border-0 py-1.5 text-gray-900 shadow-sm ring-1 ring-inset ring-gray-300 placeholder:text-gray-400 focus:ring-2 focus:ring-inset focus:ring-indigo-600 sm:text-sm sm:leading-6" %>
          </div>
        </div>

        <div class="col-span-6">
          <label for="is_active" class="block text-sm font-medium leading-6 text-gray-900">Is_Active</label>
          <div class="mt-1">
            <%= form.check_box :is_active, class: "block rounded-md border-0 py-1.5 text-gray-900 shadow-sm ring-1 ring-inset ring-gray-300 placeholder:text-gray-400 focus:ring-2 focus:ring-inset focus:ring-indigo-600 sm:text-sm sm:leading-6" %>
          </div>
        </div>

        <div class="col-span-6">
          <label for="status" class="block text-sm font-medium leading-6 text-gray-900">Status</label>
          <div class="mt-1">
            <%= form.select(:status, Client.statuses.keys, { selected: @client&.status }, { class: 'block w-full rounded-md border-0 py-1.5 text-gray-900 shadow-sm ring-1 ring-inset ring-gray-300 placeholder:text-gray-400 focus:ring-2 focus:ring-inset focus:ring-indigo-600 sm:text-sm sm:leading-6' }) %>
          </div>
        </div>
      </div>
    </div>
  </div>

  <div class="mt-3 flex items-center justify-end gap-x-6">
    <button type="submit" class="rounded-md bg-secondary-900 px-3 py-2 text-sm font-semibold text-white shadow-sm hover:bg-indigo-500 focus-visible:outline focus-visible:outline-2 focus-visible:outline-offset-2 focus-visible:outline-indigo-600">Save</button>
  </div>
<% end %>
