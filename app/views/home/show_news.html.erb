<section class="bg-center bg-gray-700 relative overflow-hidden mt-16">
    <%= image_tag @news.image, class:"absolute inset-0 h-full w-full object-cover" %>
    <div class="absolute inset-0 bg-green-900/90 mix-blend-multiply"></div>
    <div class="absolute -left-80 -top-56 transform-gpu blur-3xl" aria-hidden="true">
        <div class="aspect-[1097/845] w-[68.5625rem] bg-gradient-to-r from-[#2DAB6C] to-[#023D6C] opacity-[0.45]"
            style="clip-path: polygon(74.1% 44.1%, 100% 61.6%, 97.5% 26.9%, 85.5% 0.1%, 80.7% 2%, 72.5% 32.5%, 60.2% 62.4%, 52.4% 68.1%, 47.5% 58.3%, 45.2% 34.5%, 27.5% 76.7%, 0.1% 64.9%, 17.9% 100%, 27.6% 76.8%, 76.1% 97.7%, 74.1% 44.1%)">
        </div>
    </div>
    <div class="hidden md:absolute md:bottom-16 md:left-[50rem] md:block md:transform-gpu md:blur-3xl"
        aria-hidden="true">
        <div class="aspect-[1097/845] w-[68.5625rem] bg-gradient-to-r from-[#2DAB6C] to-[#023D6C] opacity-25"
            style="clip-path: polygon(74.1% 44.1%, 100% 61.6%, 97.5% 26.9%, 85.5% 0.1%, 80.7% 2%, 72.5% 32.5%, 60.2% 62.4%, 52.4% 68.1%, 47.5% 58.3%, 45.2% 34.5%, 27.5% 76.7%, 0.1% 64.9%, 17.9% 100%, 27.6% 76.8%, 76.1% 97.7%, 74.1% 44.1%)">
        </div>
    </div>
    <div class="max-w-screen-lg relative flex flex-wrap items-center justify-between mx-auto px-4 py-16 lg:py-16">
        <div class="flex flex-col py-4 leading-normal">
            <h5 class="mb-2 text-2xl font-bold tracking-tight text-gray-100">
                <%= @news.title %>
            </h5>
            <p class="text-gray-600">Posted on: <%= "#{@news.created_at.strftime('%B %d, %Y')}" %>
            </p>
        </div>
    </div>
</section>

<section class="bg-center bg-blend-multiply">
    <div class="max-w-screen-lg flex flex-col items-center justify-center mx-auto px-4 py-16 lg:pb-16">
        <div class="w-full">
            <div class="text-normal leading-7 text-gray-800">
                <%= @news.description %>
            </div>
        </div>
    </div>
</section>